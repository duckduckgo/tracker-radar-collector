{
    "compilerOptions": {
        "target": "es2021",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "browser/",
        "cli/",
        "collectors/",
        "helpers/",
        "post-processing/",
        "tests/",
        "reporters/",
        "./*.js"
    ],
    "exclude": ["node_modules/*"]
}